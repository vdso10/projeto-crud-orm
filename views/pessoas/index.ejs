<%-include ('../partials/header.ejs')%>


<h1>Lista Pessoas</h1>

<p><a href="/pessoas/create">Nova pessoa</a></p>

<table class="table table-hover table-bordered">
    <thead>
      <tr>
        
        <th scope="col">Nome</th>
        <th scope="col">Cargo</th>
        <th scope="col">Ações</th>
      </tr>
    </thead>
    <% pessoas.map( pessoa => { %>

        <tbody>
            <tr>              
              <td><%=pessoa.nome%></td>
              <td><%=pessoa.cargo%></td>
              <td>
                  <div class="btn-group" role="group">
                    <a href="/pessoas/edit/<%= pessoa.id %>" class="btn btn-warning">Editar</a>
                    <a href="/pessoas/delete/<%= pessoa.id %>" class="btn btn-danger">Excluir</a>
                  </div>
                  
              </td>              
            </tr>
          
        </tbody>

    <% }) %>
   
  </table>



   <%-include ('../partials/footer.ejs')%>